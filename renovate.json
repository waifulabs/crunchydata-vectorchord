{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customDatasources": {
    "crunchy-postgres": {
      "defaultRegistryUrlTemplate": "https://www.crunchydata.com/developers/download-postgres/containers/postgresql17",
      "format": "html"
      //"transformTemplates": [
      //  "{ \"releases\": $distinct($replace($$, /(?s).*\"tag\":\"(ubi9-[^\"]+)\".*/g, \"$1\")) ~> $map(function($v){ {\"version\": $v} }) }"
      //]
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.crunchy-postgres"],
      "extractVersion": "/^(?<version>ubi9-[\\w.\\-]+)$/"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": [
        "Process annotated dependencies"
      ],
      "managerFilePatterns": [
        "/\\.env(?:\\.j2)?$/",
        "/\\.sh(?:\\.j2)?$/",
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+/(?<currentValue>(v|\\d)[^/]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
    },
        {
      "customType": "regex",
      "description": [
        "Process annotated Crunchy Postgres dependencies"
      ],
      "managerFilePatterns": [
        "/\\.github\\/workflows\\/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+(-|:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n\\s*-\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "custom.crunchy-postgres",
      "versioningTemplate": "regex:^(?<base>ubi\\d+)-(?<major>\\d+)\\.(?<minor>\\d+)-(?<patch>\\d+)$"
    }
  ]
}