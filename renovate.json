{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePatterns": [
        "crunchydata/crunchy-postgres"
      ],
      "versioning": "regex:^(?<compatibility>ubi\\d+)-(?<major>\\d+)\\.(?<minor>\\d+)-(?<patch>\\d+)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process CrunchyDB Postgres versions in GitHub workflows",
      "fileMatchStrings": [
        "\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+- (?<currentValue>ubi\\d+-[\\d.]+-\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "registry.developers.crunchydata.com/{{depName}}",
      "versioningTemplate": "regex:^(?<compatibility>ubi\\d+)-(?<major>\\d+)\\.(?<minor>\\d+)-(?<patch>\\d+)$"
    },
    {
      "customType": "regex",
      "description": "Process VectorChord versions in Dockerfile",
      "fileMatchStrings": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+ARG VECTORCHORD_TAG=(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}